    <div class="col-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control"
                    asp-items="@Model.CategoryOptionSelectList()"
                        >
                    <option value="">-- SELECT A CATEGORY --</option>
                </select>
            </div>
